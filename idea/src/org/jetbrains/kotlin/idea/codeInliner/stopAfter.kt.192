package org.jetbrains.kotlin.idea.codeInliner

inline fun <T> Iterator<T>.stopAfter(crossinline predicate: (T) -> Boolean): Iterator<T> = iterator {
    for (element in this@stopAfter) {
        yield(element)
        if (predicate(element)) {
            break
        }
    }
}